
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <script src="~/Scripts/jquery-1.7.1.js"></script>
    <script src="~/Scripts/jquery.unobtrusive-ajax.js"></script>
    <title>角色信息</title>
    <script type="text/javascript">
        //表单提交
        function AddRoleInfoSubmit() {
            $('#AddRolefrom').submit();
        }
        //添加用户成功或失败之后
        function AfterAddRole(data) {
            window.parent.window.AfterAdd(data);//调用父窗体的添加成功方法
        }
    </script>
</head>
<body>
        @using (Ajax.BeginForm("AddRoleInfo", "RoleInfo", new AjaxOptions() { HttpMethod = "post", OnSuccess = "AfterAddRole" },new {id="AddRolefrom" }))
        {
            <div class="form-group form-group-sm">
                    <label for="RoleName" class="col-sm-2 control-label">角色名称:</label>
                <div class="col-sm-10">
                    <input type="text" class="form-control input-sm" id="RoleName" name="RoleName" placeholder="角色名称">
                </div>
                </div>
            <div class="form-group form-group-sm">
                <label for="Remark" class="col-sm-2 control-label">备注:</label>
                <div class="col-sm-10">
                    <input type="text" class="form-control input-sm"  id="Remark" name="Remark" placeholder="备注">
                </div>
            </div>          
        }
</body>
</html>
